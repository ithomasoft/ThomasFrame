<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingActivity">

    <com.thomas.res.widget.ThomasTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:centerText="设置中心"
        app:centerTextColor="@color/thomas_color_app_title_text"
        app:centerTextMarquee="true"
        app:centerType="textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftImageResource="@drawable/ic_arrow_back"
        app:leftType="imageButton"
        app:rightType="none"
        app:titleBarBackgroundColor="@color/thomas_color_app_title_background" />

    <com.allen.library.SuperTextView
        android:id="@+id/btn_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:sDividerLineType="none"
        app:sLeftTextString="检查更新"
        app:sRightIconHeight="16dp"
        app:sRightIconRes="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:sRightIconWidth="16dp"
        app:sShapeSelectorNormalColor="@android:color/white"
        app:sShapeSelectorPressedColor="@color/thomas_color_driver"
        app:sUseShape="true" />

    <com.allen.library.SuperTextView
        android:id="@+id/btn_clean"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_update"
        app:sDividerLineType="none"
        app:sLeftTextString="清除缓存"
        app:sRightIconHeight="16dp"
        app:sRightIconRes="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:sRightIconWidth="16dp"
        app:sShapeSelectorNormalColor="@android:color/white"
        app:sShapeSelectorPressedColor="@color/thomas_color_driver"
        app:sUseShape="true" />

    <com.allen.library.SuperTextView
        android:id="@+id/btn_feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_clean"
        app:sDividerLineType="none"
        app:sLeftTextString="意见反馈"
        app:sRightIconHeight="16dp"
        app:sRightIconRes="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:sRightIconWidth="16dp"
        app:sShapeSelectorNormalColor="@android:color/white"
        app:sShapeSelectorPressedColor="@color/thomas_color_driver"
        app:sUseShape="true" />

</androidx.constraintlayout.widget.ConstraintLayout>